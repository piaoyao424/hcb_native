<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="15dp" >

    <ImageView
        android:id="@+id/my_party_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="15dp"
        android:contentDescription="@string/ImageDescription"
        android:scaleType="fitXY"
        android:src="@drawable/u28_normal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/my_party_item_title"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:gravity="bottom"
            android:singleLine="true"
            android:text="海水、阳光、沙滩-三亚-海口自助休闲游"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/my_party_item_initiator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="发起者：丁小龙"
            android:textColor="@color/dark_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_party_item_addr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="宜昌-三亚-海口"
            android:textColor="@color/dark_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_party_item_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="2013/12/06出发，共6天"
            android:textColor="@color/dark_grey"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>