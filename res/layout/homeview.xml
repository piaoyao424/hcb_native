<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@color/light_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="15dp" >

            <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="0.26"
                android:contentDescription="@string/ImageDescription"
                android:scaleType="fitStart"
                android:src="@drawable/applogo04" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="0.26"
                android:contentDescription="@string/ImageDescription"
                android:scaleType="fitStart"
                android:src="@drawable/speaker_new" >
            </ImageView>

            <ViewFlipper
                android:id="@+id/home_viewflipper"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/white"
                android:flipInterval="5000"
                android:padding="4dip" >

                <TextView
                    android:id="@+id/versioncode_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:text="version 1.0v"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </ViewFlipper>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="392dp"
            android:background="@color/light_gray"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/light_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <com.vincentTools.ImageView_Win8
                    android:id="@+id/homeview_aiCheMeiRong"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/aichemeirong" />

                <com.vincentTools.ImageView_Win8
                    android:id="@+id/homeview_qiCheYongPin"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.59"
                    android:scaleType="fitCenter"
                    android:src="@drawable/qicheyongping" />

                <com.vincentTools.ImageView_Win8
                    android:id="@+id/homeview_cheLiangBaoXian"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="0.47"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cheliangbaoxian" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="134dp"
                android:background="@color/light_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <com.vincentTools.ImageView_Win8
                    android:id="@+id/homeview_aiCheQingJie"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/aicheqingjie" />

                <com.vincentTools.ImageView_Win8
                    android:id="@+id/homeview_woDeHuiCheBao"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/wodehuichebao" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/light_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <com.vincentTools.ImageView_Win8
                    android:id="@+id/homeview_aiCheBaoYang"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/aichebaoyang" />

                <com.vincentTools.ImageView_Win8
                    android:id="@+id/homeview_daoLuJiuYuan"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.88"
                    android:scaleType="fitCenter"
                    android:src="@drawable/daolujiuyuan" />

                <com.vincentTools.ImageView_Win8
                    android:id="@+id/homeview_jingCaiHuoDong"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="0.87"
                    android:scaleType="fitCenter"
                    android:src="@drawable/jingcaihuodong" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/light_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <com.vincentTools.ImageView_Win8
                    android:id="@+id/homeview_webHome"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/webhome" />

                <com.vincentTools.ImageView_Win8
                    android:id="@+id/homeview_telephone"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/telephone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>