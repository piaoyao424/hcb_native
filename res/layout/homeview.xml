<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/light_gray"
        android:gravity="center_vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/light_gray"
        android:gravity="center_vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:background="@color/light_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.vincentTools.ImageView_Win8
                android:id="@+id/homeview_aiCheMeiRong"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginleft="4dp"
                android:layout_marginRight="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/aichemeirong" />

            <com.vincentTools.ImageView_Win8
                android:id="@+id/homeview_qiCheYongPin"
                android:layout_weight="0.59"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginleft="4dp"
                android:layout_marginRight="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/qicheyongping" />

            <com.vincentTools.ImageView_Win8
                android:id="@+id/homeview_cheLiangBaoXian"
                android:layout_marginleft="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.47"
                android:scaleType="fitCenter"
                android:src="@drawable/cheliangbaoxian" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:background="@color/light_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.vincentTools.ImageView_Win8
                android:id="@+id/homeview_aiCheQingJie"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginleft="4dp"
                android:layout_marginRight="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/aicheqingjie" />

            <com.vincentTools.ImageView_Win8
                android:id="@+id/homeview_woDeHuiCheBao"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginleft="4dp"
                android:layout_marginRight="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/wodehuichebao" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:background="@color/light_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.vincentTools.ImageView_Win8
                android:id="@+id/homeview_aiCheBaoYang"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/aichebaoyang" />

            <com.vincentTools.ImageView_Win8
                android:id="@+id/homeview_daoLuJiuYuan"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/daolujiuyuan" />

            <com.vincentTools.ImageView_Win8
                android:id="@+id/homeview_jingCaiHuoDong"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/jingcaihuodong" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="@color/light_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.vincentTools.ImageView_Win8
                android:id="@+id/homeview_webHome"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/webhome" />

            <com.vincentTools.ImageView_Win8
                android:id="@+id/homeview_telephone"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/telephone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>