<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp" >

    <TextView
        android:id="@+id/book_list_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="《慢慢自由路》"
        android:textColor="@color/main_text_color"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <ImageView
            android:id="@+id/book_list_item_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:contentDescription="@string/ImageDescription"
            android:scaleType="fitCenter"
            android:src="@drawable/book_ad" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />
    </LinearLayout>

    <TextView
        android:id="@+id/book_list_item_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="作者：哪儿顺*曼德拉"
        android:textColor="@color/main_text_color"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="推荐理由："
        android:textColor="@color/main_text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/book_list_item_synopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="曼德拉亲自执手的唯一自传，记录了这位黑人领袖永不屈服的自由之路和永不放弃的波澜壮阔。。。。。。。。。"
        android:textColor="@color/main_text_color"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="right" >

        <Button
            android:id="@+id/book_list_item_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_bg"
            android:text="详细信息"
            android:textColor="@color/main_text_color"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>