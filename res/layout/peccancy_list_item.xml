<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp" >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/ImageDescription"
        android:scaleType="fitCenter"
        android:src="@drawable/ico_car" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="95dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/peccancy_item_carnum"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="鄂AE111"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/peccancy_item_content"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="违章 2 次   罚款 400 元   扣分 4"
            android:textColor="@color/dark_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/peccancy_item_date"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="距下次车辆年检还有 0 天"
            android:textColor="@color/dark_grey"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_marginTop="2dp">

            <Button
                android:id="@+id/peccancy_item_car_info"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:background="@drawable/nomal_shape"
                android:gravity="center"
                android:text="车辆信息"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/peccancy_item_search"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/nomal_shape"
                android:gravity="center"
                android:text="违章查询"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>