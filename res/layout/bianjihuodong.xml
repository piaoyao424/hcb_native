<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_blue"
    android:orientation="vertical" >
    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp"
    	android:paddingLeft="25dp"
    	android:paddingRight="25dp"
    	android:gravity="center_horizontal"
    	android:orientation="vertical" >
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="30dp"
			android:gravity="center_vertical"
			android:orientation="horizontal" >
			<TextView
			    android:layout_width="80dp"
			    android:layout_height="wrap_content"
			    android:text="活动类别："
			    android:textColor="@color/black"
			    android:textSize="14sp" />
			<RelativeLayout
	            android:id="@+id/show_cate_first"
	            android:layout_width="130dp"
	            android:layout_height="25dp"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:gravity="center_vertical"
	            android:background="@drawable/duihuan_bg" >
				<TextView
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:text="旅游"
			    	android:textColor="@color/dark_grey"
			    	android:textSize="14sp" />
	            <ImageView
	                android:src="@drawable/arrow_bottom"
	                android:layout_height="14dp"
	                android:layout_width="14dp"
	                android:layout_marginTop="2dp"
	                android:scaleType="fitCenter"
	                android:layout_alignParentRight="true" />
	        </RelativeLayout>
        </LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="30dp"
			android:gravity="center_vertical"
			android:orientation="horizontal" >
			<TextView
			    android:layout_width="80dp"
			    android:layout_height="wrap_content"
			    android:text="活动名称："
			    android:textColor="@color/black"
			    android:textSize="14sp" />
			<EditText
			    android:layout_width="185dp"
			    android:layout_height="25dp"
			    android:gravity="center"
	            android:background="@drawable/duihuan_bg"
			    android:hint="海水、阳光、沙滩-三亚-海口自助休闲游"
			    android:textColor="@color/dark_grey"
			    android:textSize="14sp"
			    android:singleLine="true" />
        </LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="30dp"
			android:gravity="center_vertical"
			android:orientation="horizontal" >
			<TextView
			    android:layout_width="80dp"
			    android:layout_height="wrap_content"
			    android:text="活动地点："
			    android:textColor="@color/black"
			    android:textSize="14sp" />
			<EditText
			    android:layout_width="185dp"
			    android:layout_height="25dp"
			    android:gravity="center_vertical"
	            android:background="@drawable/duihuan_bg"
			    android:hint="宜昌-三亚-海口"
			    android:textColor="@color/dark_grey"
			    android:textSize="14sp"
			    android:singleLine="true" />
        </LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="30dp"
			android:gravity="center_vertical"
			android:orientation="horizontal" >
			<TextView
			    android:layout_width="80dp"
			    android:layout_height="wrap_content"
			    android:text="时        间："
			    android:textColor="@color/black"
			    android:textSize="14sp" />
			<EditText
			    android:layout_width="185dp"
			    android:layout_height="25dp"
			    android:gravity="center_vertical"
	            android:background="@drawable/duihuan_bg"
			    android:hint="2013-12-9至2013-12-15共6天"
			    android:textColor="@color/dark_grey"
			    android:textSize="14sp"
			    android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>   
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="35dp"
		android:gravity="center"
		android:background="@color/gray"
		android:text="活动安排"
		android:textColor="@color/black"
		android:textSize="16dp" />
    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp"
    	android:paddingLeft="25dp"
    	android:paddingRight="25dp"
    	android:gravity="center_horizontal"
    	android:orientation="vertical" >
		<EditText
		    android:layout_width="265dp"
		    android:layout_height="80dp"
	        android:background="@drawable/duihuan_bg"
		    android:text="第二天  2013-12-8                                早8：00大厅集合出发                                         游天涯海角"
			android:textColor="@color/dark_grey"
			android:textSize="14sp" />
		<Button
		    android:layout_width="80dp"
		    android:layout_height="30dp"
		    android:layout_marginTop="10dp"
			android:layout_gravity="left"
		    android:text="添加照片"
		    android:textSize="12sp"
		    android:textColor="@color/dark_grey" />
    </LinearLayout>   
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="35dp"
		android:gravity="center"
		android:background="@color/gray"
		android:text="活动参与方式及注意事项"
		android:textColor="@color/black"
		android:textSize="16dp" />
	<LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp"
    	android:paddingLeft="25dp"
    	android:paddingRight="25dp"
    	android:gravity="center_horizontal"
    	android:orientation="vertical" >
		<EditText
		    android:layout_width="265dp"
		    android:layout_height="80dp"
	        android:background="@drawable/duihuan_bg"
		    android:text="游玩建议：                                                       1、春季和秋季前往海南的北方游客，南北有温差，由于一下飞机就很热，最好是穿两件"
			android:textColor="@color/dark_grey"
			android:textSize="14sp" />
    </LinearLayout>
	<LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="65dp"
    	android:paddingTop="20dp"
    	android:paddingBottom="5dp"
    	android:paddingLeft="25dp"
    	android:paddingRight="25dp" >
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="35dp"
			android:gravity="center"
			android:background="@color/orange"
			android:text="保  存"
			android:textColor="@color/white"
			android:textSize="16sp" />
    </LinearLayout>    
</LinearLayout>